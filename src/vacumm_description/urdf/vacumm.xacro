<?xml version="1.0"?>
<robot name="vacumm_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>

    <gazebo reference="link_base">
        
    </gazebo>
    <gazebo reference="link_left_Wheel">
        
    </gazebo>
    <gazebo reference="link_right_wheel">
        
    </gazebo>

    <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
      <legacyMode>false</legacyMode>
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>joint_left_wheel</leftJoint>
      <rightJoint>joint_right_wheel</rightJoint>
      <wheelSeparation>0.235</wheelSeparation>
      <wheelDiameter>0.08</wheelDiameter>
      <torque>0.1</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>link_base</robotBaseFrame>
    </plugin>
  </gazebo>
    <link name="link_base">
        <pose>0 0.1 0 0 0</pose>
        <inertial>
            <mass value="5"/>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <inertia ixx="0.0395416666667" ixy="0" ixz="0" iyy="0.106208333333" iyz="0" izz="0.106208333333"/>
        </inertial>
        <collision name="collision_chassis">
        <geometry>
            <cylinder radius="0.1" length="0.3"/>
        </geometry>
        </collision>
        <visual name="chassis">
            <origin xyz="0 0 0.15" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.1" length="0.3"/>
            </geometry>    
            <material name="green" />
        </visual>

        <visual name="front_castor">
            <origin xyz="0.065 0 -0.025" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </visual>

        <visual name="back_castor" >
            <origin xyz="-0.065 0 -0.025" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </visual>
        
    </link>

    <link name="link_left_wheel">
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
        </inertial>
        <collision name="link_left_wheel_collision">
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </collision>
        <visual name="left_wheel" >
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.04" length="0.01"/>
            </geometry>
        </visual>
    </link>
    

    <link name="link_right_wheel">
        <inertial>
            <mass value="0.2"/>
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <inertia ixx="0.000526666666667" ixy="0" ixz="0" iyy="0.000526666666667" iyz="0" izz="0.001"/>
        </inertial>
        <collision name="link_right_wheel_collision">
            <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.04" radius="0.1"/>
            </geometry>
        </collision>
        <visual name="right_wheel" >
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.04" length="0.01"/>
            </geometry>
        </visual>
    </link>


    <joint name="joint_left_wheel" type="continuous">
        <parent link="link_base"/>
        <child link="link_left_wheel"/>
        <origin xyz="0 0.11 -0.02" rpy="0 0 0"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <joint name="joint_right_wheel" type="continuous">
        <parent link="link_base"/>
        <child link="link_right_wheel"/>
        <origin xyz="0 -0.11 -0.02" rpy="0 0 0"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
</robot>